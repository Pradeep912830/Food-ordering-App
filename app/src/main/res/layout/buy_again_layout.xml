<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/by_again_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/food_three" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/buy_again_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FoodName"
                    android:textColor="@color/mainLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/buy_again_foodPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FoodPrice"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/mainDark" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_again_button"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="Buy Again"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:background="@drawable/colorful" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
