<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/by_again_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/food_three"/>


            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buy_again_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FoodName"
                    android:textColor="@color/mainLight"
                    android:textStyle="normal"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/buy_again_foodPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FoodPrice"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/mainDark"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_again_button"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="Buy Again"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:layout_marginLeft="8dp"
                android:background="@drawable/colorful"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>